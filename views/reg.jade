extends layout
block content
    h3.field.regheader #{title}
    form.regform(method='post')
        p.mess #{message}
        div.item
            label.label(for='username') acount
            input(type='text',placeholder='input account',id='username',name='username')
        div.item
            label.label(for='password') password
            input(type='password',placeholder='password',id='password',name='password')
        div.item
            label.label(for='passwordconf') repeat password
            input(type='password',placeholder='repeat password',id='passwordconf',name='passwordconf')
        div.item
            label.label
            input(type='submit' id='sub',name='sub' value='reg')


